{
    "compilerOptions": {
        "module": "ES2015",
        "target": "ES2015",
        "useDefineForClassFields": true,
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "allowJs": true,
        "outDir": "dist",
        "lib" : ["ESNext", "DOM"]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"],
}